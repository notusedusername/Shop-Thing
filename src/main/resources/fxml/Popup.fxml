<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="100.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopthing.controller.PopupController">
    <center>
        <HBox>
            <ImageView fx:id="image"/>
            <Label fx:id="messageLabel" wrapText="true"/>
        </HBox>
    </center>
    <bottom>
        <Button onAction="#handleOK" text="OK"/>
    </bottom>

</BorderPane>
